<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/nav_graph"
app:startDestination="@id/onboardFragment" >
<fragment
    android:id="@+id/onboardFragment"
    android:name="com.example.restaurantapp.ui.OnboardFragment"
    android:label="@string/onboard_title"
    tools:layout="@layout/fragment_onboard" >

    <action
        android:id="@+id/action_onboardFragment_to_signInFragment"
        app:destination="@id/signInFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

</fragment>
<fragment
    android:id="@+id/signInFragment"
    android:name="com.example.restaurantapp.ui.SignInFragment"
    android:label="@string/sign_in_title"
    tools:layout="@layout/fragment_sign_in" >

    <action
        android:id="@+id/action_signInFragment_to_signUpFragment"
        app:destination="@id/signUpFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
    <action
        android:id="@+id/action_signInFragment_to_homeFragment"
        app:destination="@id/homeFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

</fragment>
<fragment
    android:id="@+id/signUpFragment"
    android:name="com.example.restaurantapp.ui.SignUpFragment"
    android:label="@string/sign_up_title"
    tools:layout="@layout/fragment_sign_up" />
<fragment
    android:id="@+id/homeFragment"
    android:name="com.example.restaurantapp.ui.HomeFragment"
    android:label="@string/home_title"
    tools:layout="@layout/fragment_home" >

    <argument
        android:name="userEmail"
        app:argType="string" />

</fragment>
</navigation>