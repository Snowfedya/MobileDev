# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass any JVM options to Gradle separately.
DEFAULT_JVM_OPTS=""

APP_NAME="Gradle"
APP_BASE_NAME=`basename "$0"`

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

warn () {
    echo "$*"
}

die () {
    echo
    echo "$*"
    echo
    exit 1
}

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "`uname`" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  MINGW* )
    msys=true
    ;;
  NONSTOP* )
    nonstop=true
    ;;
esac

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`"/$link"
    fi
done
SAVED="`pwd`"
cd "`dirname \"$PRG\"`/" >/dev/null
APP_HOME="`pwd -P`"
cd "$SAVED" >/dev/null

# Attempt to set JAVA_HOME, drumming up likely locations
if [ -z "$JAVA_HOME" ] ; then
    if [ -d "/opt/java8" ] ; then
        JAVA_HOME="/opt/java8"
    elif [ -d "/usr/lib/jvm/java-8-openjdk-amd64" ] ; then
        JAVA_HOME="/usr/lib/jvm/java-8-openjdk-amd64"
    fi
fi
if [ -z "$JAVA_HOME" ] ; then
    if $darwin; then
        if [ -x '/usr/libexec/java_home' ] ; then
            JAVA_HOME=`/usr/libexec/java_home`
        elif [ -d "/System/Library/Frameworks/JavaVM.framework/Versions/CurrentJDK/Home" ]; then
            JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Versions/CurrentJDK/Home"
        fi
    else
        java_location=`which java`
        if [ -x "$java_location" ] ; then
            JAVA_HOME=`readlink -f "$java_location" | sed "s:/bin/java::"`
        fi
    fi
fi
if [ -z "$JAVA_HOME" ] ; then
    die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Set LAUNCHER_JAR
LAUNCHER_JAR="$APP_HOME/gradle/wrapper/gradle-wrapper.jar"

if [ ! -f "$LAUNCHER_JAR" ]; then
  die "ERROR: The launcher JAR '$LAUNCHER_JAR' does not exist."
fi

# Set JAVA_EXE
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses jre/sh/java
        JAVA_EXE="$JAVA_HOME/jre/sh/java"
    else
        JAVA_EXE="$JAVA_HOME/bin/java"
    fi
fi

if [ -z "$JAVA_EXE" ] || [ ! -x "$JAVA_EXE" ] ; then
    JAVA_EXE=java
fi

# Collect all arguments for the java command, following recommended practice for Gradle scripts
# (see https://docs.gradle.org/current/userguide/userguide_single.html#running_a_build_from_the_command_line)
#
# Use CLASSPATH env var if available, otherwise use launcher JAR file
# Use JAVA_OPTS env var if available, and pass all other arguments to the wrapper
#
if [ -n "$CLASSPATH" ] ; then
    LOCAL_CLASSPATH="$CLASSPATH"
else
    LOCAL_CLASSPATH="$LAUNCHER_JAR"
fi

# For Cygwin, switch paths to Windows format before running java
if $cygwin ; then
    APP_HOME=`cygpath --path --windows "$APP_HOME"`
    LOCAL_CLASSPATH=`cygpath --path --windows "$LOCAL_CLASSPATH"`
fi

# Split up the JVM options only if they are not already in an array
if [ -z "$JAVA_OPTS" ] ; then
    JAVA_OPTS=()
fi
# For Java 9 or later, default module options should be set
# (see https://docs.gradle.org/current/userguide/upgrading_version_8.html#java_9_or_later)
if [ -z "$DEFAULT_JVM_OPTS" ] ; then
  DEFAULT_JVM_OPTS='"-Dorg.gradle.appname=gradlew"'
else
  DEFAULT_JVM_OPTS="$DEFAULT_JVM_OPTS \"-Dorg.gradle.appname=gradlew\""
fi
eval "set -- $DEFAULT_JVM_OPTS $JAVA_OPTS"
JAVA_OPTS=("$@")

# Add the launcher JAR to the classpath
#
# For Cygwin, switch paths to Windows format before running java
if $cygwin ; then
    APP_HOME=`cygpath --path --windows "$APP_HOME"`
    LAUNCHER_JAR=`cygpath --path --windows "$LAUNCHER_JAR"`
fi
LOCAL_CLASSPATH="$LAUNCHER_JAR"

# Execute Gradle
exec "$JAVA_EXE" "${JAVA_OPTS[@]}" -classpath "$LOCAL_CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
