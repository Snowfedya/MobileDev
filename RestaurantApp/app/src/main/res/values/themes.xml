<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RestaurantApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/app_background_dark_blue</item>
        <item name="colorOnPrimary">@color/text_on_dark_background</item>

        <item name="colorSecondary">@color/button_light_green</item>
        <item name="colorOnSecondary">@color/text_on_light_green_button</item>

        <!-- Default background color for activities -->
        <item name="android:colorBackground">@color/app_background_light_blue</item>
        <item name="colorOnBackground">@color/black</item> <!-- Text color on light blue background -->

        <!-- Surface colors (e.g. for Cards, Menus) -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error colors -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.RestaurantApp" parent="Base.Theme.RestaurantApp" />
</resources>